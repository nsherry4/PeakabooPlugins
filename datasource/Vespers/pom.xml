<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>net.sciencestudio.peakaboo.plugins</groupId>
	<artifactId>Vespers</artifactId>
	<version>1.0</version>
	<packaging>jar</packaging>

	<name>Vespers</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sciencestudio.peakaboo</groupId>
			<artifactId>PeakabooSDK</artifactId>
			<version>5.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>localjars</groupId>
			<artifactId>clsvespersdata</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>localjars</groupId>
			<artifactId>sscoremodel</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>localjars</groupId>
			<artifactId>ssdatacore</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>localjars</groupId>
			<artifactId>ssutilities</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>jar</id>
			<url>file://${project.basedir}/repo/</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<!-- Here we force the jar to build with the required library included -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>localjars:clsvespersdata</include>
									<include>localjars:sscoremodel</include>
									<include>localjars:ssdatacore</include>
									<include>localjars:ssutilities</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
